<mujoco model="simple_hopper">

  <compiler angle="radian" inertiafromgeom="true"/>
  <default>
    <geom type="capsule" condim="1" mass="1"/>
    <joint limited="true"/>
    <motor ctrlrange="-1.0 1.0" ctrllimited="true"/>
    <site size="0.05" rgba="0.9 0.9 0.9 0.7" type="sphere"/>
  </default>

  <!-- 3. Actuators (Motors) -->
  <actuator>
    <!-- Hinge motor for the thigh joint -->
    <motor name="thigh_motor" joint="thigh_joint" gear="100"/>
  </actuator>

  <!-- 4. The Robot Body Structure -->
  <worldbody>
    <light pos="0 0 5" dir="0 0 -1" directional="true"/>

    <!-- The Torso (Root Body) -->
    <body name="torso" pos="0 0 2.0">
      <geom name="torso_geom" type="capsule" size="0.08 0.3" mass="1" zaxis="0 0 1" rgba="0.8 0.2 0.2 1"/>

      <!-- The Free Joint (Connects Torso to the World) -->
      <!-- This adds the first 7 DOFs (3 position, 4 quaternion orientation) -->
      <joint name="root" type="free"/>

      <!-- Site for Observation reference (e.g., foot contact point) -->
      <site name="tip" pos="0 0 0.3"/>

      <!-- Thigh Segment -->
      <body name="thigh" pos="0 0 -0.4">
        <joint name="thigh_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-1.57 0"/>
        <geom name="thigh_geom" type="capsule" size="0.06 0.4" pos="0 0 -0.4" rgba="0.2 0.8 0.2 1"/>

        <!-- Leg/Shin Segment -->
        <body name="leg" pos="0 0 -0.8">
          <joint name="leg_joint" type="hinge" axis="0 1 0" pos="0 0 0" range="-1.57 0"/>
          <geom name="leg_geom" type="capsule" size="0.04 0.3" pos="0 0 -0.3" rgba="0.2 0.2 0.8 1"/>

          <!-- Foot Contact Site -->
          <site name="foot" pos="0 0 -0.6" type="sphere" size="0.05" rgba="0.9 0.9 0.9 1"/>
        </body>
      </body>
    </body>
  </worldbody>
</mujoco>