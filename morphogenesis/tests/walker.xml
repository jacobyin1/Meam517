<mujoco model="walker2d">
  <default>
    <joint limited="true" damping="0.5" armature="0.05"/>
    <geom friction="0.7" material="self" solref="0.02 1" solimp="0.9 0.95 0.001"/>
    <motor ctrllimited="true" ctrlrange="-1.0 1.0"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".4 .5 .6" rgb2="0 0 0" width="100" height="100"/>
    <material name="self" rgba=".7 .5 .3 1"/>
    <material name="limb_left" rgba=".7 .3 .3 1"/> <!-- Red leg -->
    <material name="limb_right" rgba=".3 .3 .7 1"/> <!-- Blue leg -->
  </asset>

  <worldbody>
    <light pos="0 0 2" mode="trackcom"/>

    <body name="torso">
      <joint name="root" type="free" armature="0"/>
      <geom name="torso_geom" type="capsule" fromto="0 0 1.2 0 0 0.7" size="0.05"/>
        
      <body name="thigh_right" pos="0 0 0">
        <joint name="thigh_joint_right" axis="0 1 0" pos="0 0 0.7" range="-45 45" type="hinge"/>
        <geom name="thigh_geom_right" type="capsule" fromto="0 0 0.7 0.6 0 0.7" size="0.05" material="limb_right"/>

        <body name="leg_right" pos="0.6 0 0">
          <joint name="leg_joint_right" axis="0 1 0" range="-60 60" type="hinge" pos="0 0 0.7"/>
          <geom name="leg_geom_right" type="capsule" fromto="0 0 0.7 0 0 0.1" size="0.04" material="limb_right"/>
        </body>
      </body>

      <body name="thigh_left" pos="0 0 0">
        <joint name="thigh_joint_left" axis="0 1 0" pos="0 0 0.7" range="-45 45" type="hinge"/>
        <geom name="thigh_geom_left" type="capsule" fromto="0 0 0.7 -0.6 0 0.7" size="0.05" material="limb_left"/>

        <body name="leg_left" pos="-0.6 0 0">
          <joint name="leg_joint_left" axis="0 1 0" range="-60 60" type="hinge" pos="0 0 0.7"/>
          <geom name="leg_geom_left" type="capsule" fromto="0 0 0.7 0 0 0.1" size="0.04" material="limb_left"/>
        </body>
      </body>

      <body name="thigh_up" pos="0 0 0">
        <joint name="thigh_joint_up" axis="1 0 0" pos="0 0 0.7" range="-45 45" type="hinge"/>
        <geom name="thigh_geom_up" type="capsule" fromto="0 0 0.7 0 0.6 0.7" size="0.05"/>

        <body name="leg_up" pos="0 0.6 0">
          <joint name="leg_joint_up" axis="1 0 0" range="-60 60" type="hinge" pos="0 0 0.7"/>
          <geom name="leg_geom_up" type="capsule" fromto="0 0 0.7 0 0 0.1" size="0.04"/>
        </body>
      </body>

      <body name="thigh_down" pos="0 0 0">
        <joint name="thigh_joint_down" axis="1 0 0" pos="0 0 0.7" range="-45 45" type="hinge"/>
        <geom name="thigh_geom_down" type="capsule" fromto="0 0 0.7 0 -0.6 0.7" size="0.05"/>

        <body name="leg_down" pos="0 -0.6 0">
          <joint name="leg_joint_down" axis="1 0 0" range="-60 60" type="hinge" pos="0 0 0.7"/>
          <geom name="leg_geom_down" type="capsule" fromto="0 0 0.7 0 0 0.1" size="0.04"/>
        </body>
      </body>

    </body>
  </worldbody>

  <actuator>
    <motor name="thigh_right" joint="thigh_joint_right" gear="100"/>
    <motor name="thigh_left" joint="thigh_joint_left" gear="100"/>
    <motor name="thigh_up" joint="thigh_joint_up" gear="100"/>
    <motor name="thigh_down" joint="thigh_joint_down" gear="100"/>
    <motor name="leg_right" joint="leg_joint_right" gear="100"/>
    <motor name="leg_left" joint="leg_joint_left" gear="100"/>
    <motor name="leg_up" joint="leg_joint_up" gear="100"/>
    <motor name="leg_down" joint="leg_joint_down" gear="100"/>
  </actuator>

</mujoco>